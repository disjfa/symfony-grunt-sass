<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>{% block title %}Welcome!{% endblock %}</title>
    {% if app.environment == 'dev' %}
        <link rel="stylesheet" href="{{ asset('demo/css/demo.css') }}">
    {% else %}
        <link rel="stylesheet" href="{{ asset('demo/css/demo.min.css') }}">
    {% endif %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block body %}{% endblock %}

{% if app.environment == 'dev' %}
    <script src="{{ asset('demo/js/demo.js') }}"></script>
{% else %}
    <script src="{{ asset('demo/js/demo.min.js') }}"></script>
{% endif %}
<script src="{{ asset('demo/js/modernizr.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
