{
  "scss": {
    "source": [
      "../app/Resources/scss/source.scss"
    ],
    "destination": "_dev/css/style.css"
  },
  "css": {
    "source": [
      "_dev/css/style.css"
    ],
    "destination": "_static/css/style.min.css"
  },
  "copy": {
    "source": [
      "../web/vendor/font-awesome/fonts/*"
    ],
    "destination": "fonts/"
  },
  "concat": {
    "source": [
      "vendor/jquery/dist/jquery.js",
      "vendor/bootstrap/dist/js/bootstrap.js",
      "../app/Resources/js/app.js"
    ],
    "destination": "_dev/js/script.js"
  },
  "uglify": {
    "source": [
      "_dev/js/script.js"
    ],
    "destination": "_static/js/script.min.js"
  }
}